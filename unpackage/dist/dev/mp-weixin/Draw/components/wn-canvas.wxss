/* 水平间距 */
.content {
  height: 100vh;
  width: 100vw;
  box-sizing: border-box;
  position: relative;
}
.content .draw-logo {
  width: 1.8rem;
  height: 1.8rem;
  box-sizing: border-box;
  position: fixed;
  right: 0.1rem;
  top: 0.5rem;
  z-index: 10;
}
.content .pen-box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 3rem;
}
.content .pen-box .pen {
  width: 3rem;
  border-radius: 0.2rem;
}
.content .pen-box .pen-slider {
  width: 60%;
}
.content .pen-box .pen-txt {
  font-size: 1.2rem;
}
.content .tools-box .tools {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  border-radius: 0.2rem 0 0 0.2rem;
}
.content .tools-box .tools .tools-item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
}
.content .tools-box .tools .tools-item .tools-icon {
  width: 1.2rem;
  height: 1.2rem;
}
.content .tools-box .tools .tools-item text {
  width: 2rem;
}
.content .btn-box {
  position: fixed;
  bottom: 1.2rem;
  margin: 0 auto;
  width: 33%;
  left: 0;
  right: 0;
}
.under-image {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
}
/* 竖屏 */
@media screen and (orientation: portrait) {
.tools-box .tools {
    height: 3rem;
    flex-wrap: wrap;
}
.tools-box .tools .tools-item {
    width: 8%;
}
.canvas-box {
    width: 100vw;
    position: relative;
}
.canvas-box .board-canvas {
    height: 100%;
    width: 100%;
    position: absolute;
    background: rgba(0, 0, 0, 0);
}
}
/* 横屏 */
@media screen and (orientation: landscape) {
.tools-box {
    position: fixed;
    height: 80vh;
    z-index: 10;
    overflow: auto;
    right: 0;
}
.tools-box .tools {
    width: 1.8rem;
    flex-direction: column;
}
.tools-box .tools .tools-item {
    width: 100%;
    margin: 0.4rem 0;
}
.canvas-box {
    width: 100%;
    position: relative;
}
.canvas-box .board-canvas {
    height: 100%;
    width: 100%;
    position: absolute;
    background: rgba(0, 0, 0, 0);
}
}

